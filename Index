<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pomodoro Overlay</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      text-align: center;
      background: transparent;
      color: white;
      margin: 0;
    }
    #timer {
      font-size: 64px;
      margin: 10px 0;
    }
    #status {
      font-size: 28px;
    }
  </style>
</head>
<body>
  <div id="status">Ready</div>
  <div id="timer">50:00</div>

  <script>
    let sessionCount = 0;
    let isFocus = true;
    let interval;
    let totalSessions = 10;

    function startTimer() {
      if (interval) return;

      let duration = isFocus ? 50 * 60 : 10 * 60;
      updateStatus();
      updateDisplay(duration);

      interval = setInterval(() => {
        duration--;
        updateDisplay(duration);

        if (duration <= 0) {
          clearInterval(interval);
          interval = null;

          if (isFocus) {
            sessionCount++;
            if (sessionCount >= totalSessions) {
              document.getElementById("status").innerText = "âœ… Done!";
              document.getElementById("timer").innerText = "00:00";
              return;
            }
          }

          isFocus = !isFocus;
          startTimer();
        }
      }, 1000);
    }

    function updateDisplay(seconds) {
      const minutes = Math.floor(seconds / 60);
      const sec = seconds % 60;
      document.getElementById("timer").innerText =
        `${String(minutes).padStart(2, '0')}:${String(sec).padStart(2, '0')}`;
    }

    function updateStatus() {
      document.getElementById("status").innerText = isFocus ? "ðŸ”´ Focus" : "ðŸŒ¿ Break";
    }

    // Start automatically
    startTimer();
  </script>
</body>
</html>
